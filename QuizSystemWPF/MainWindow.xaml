<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Background="#FF1D1D1D">
            <local:QuestionPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="390" Width="800"/>
        </Grid>
        <Grid Background="#FF1D1D1D">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Background="#FF272727"/>
            <Label Content="Quiz" Background="{x:Null}" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,-5,0,0" Foreground="#FFAFAFAF" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Window>
